<%# ---------------------------------------------------------------------------------- %>
<%# Sensu Configuration                                                                %>
<%# See: http://sensuapp.org/docs/0.11/installing_sensu#configure-sensu                %>
<%# ---------------------------------------------------------------------------------- %>

{
  "client": {
    "address": "<%= spec.networks.send(spec.networks.methods(false).first).ip %>",
    "subscriptions": <%= p("sensu.client.subscriptions") %>,
    "name": "<%= name %><%= index %>.<%= p("sensu.client.deployment_name") %>",
    "params": {
      "nagios": {
        "plugins": "/var/vcap/packages/nagios-monitoring-plugins/libexec"
      },
      "ntp": {
        "server": "ntp.esl.cisco.com"
      }
    },
    "safe_mode": <%= p("sensu.client.safe_mode") %>
  }
}